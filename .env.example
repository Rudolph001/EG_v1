# Email Guardian Environment Variables
# Copy this file to .env and update the values as needed

# Database Configuration
# For local development, you can leave this empty to use SQLite
# For production, use a PostgreSQL connection string
DATABASE_URL=

# Session Security
# Generate a secure random string for production
SESSION_SECRET=dev-secret-key-change-in-production

# Logging Level
LOG_LEVEL=INFO

# Optional: For production PostgreSQL setup
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=email_guardian
# PGUSER=your_username
# PGPASSWORD=your_password